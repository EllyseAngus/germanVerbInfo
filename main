continuing = "no"
verb = input("What German verb would you like information on? ")
verb = verb.lower()
form = input("What form of the verb would you like it to be in?")
form = form.lower()
while form != "ich" and form != "du" and form != "er/sie/es" and form != "wir" and form != "ihr" and form != "sie":
  form = input("What form of the verb would you like it to be in (if er, sie, or es, please put 'er/sie/es')?")
  form = form.lower()
tense = input("What tense would you like it to be in? ")
tense = tense.lower()
while tense != "past" and tense != "present" and tense != "future": 
  tense = input("What tense would you like it to be in? (past, present, or future) ")
  tense = tense.lower()
